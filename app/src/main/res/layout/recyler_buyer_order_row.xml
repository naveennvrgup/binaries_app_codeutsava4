<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/buyer_order_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/f1" />

        <View
            android:id="@+id/rbo_line"
            android:layout_width="0.5dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@id/buyer_order_img"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/bo_trans_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/rbo_line"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:text="Transaction Number"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bo_approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bo_trans_no"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/rbo_line"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:text="Approved"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bo_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bo_approved"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@id/rbo_line"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:text="Farmer Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bo_graintype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bo_farmer"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@id/rbo_line"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:text="Grain"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bo_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bo_graintype"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/rbo_line"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:text="Quantity"
            android:textAlignment="viewEnd"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bo_graintype"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/bo_quantity"
            android:ellipsize="end"
            android:fontFamily="@font/average_sans"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Price"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>